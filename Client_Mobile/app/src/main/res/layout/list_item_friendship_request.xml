<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#CAD2C5"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/item_container_friendship_request"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_username_friendship_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3dp"
                android:text="Hugopemu13"
                android:textColor="#354F52"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/label_add_new_friend"
                android:layout_width="wrap_content"
                android:layout_below="@+id/item_username_friendship_request"
                android:layout_height="wrap_content"
                android:textColor="#354F52"
                android:layout_marginBottom="8dp"
                android:text="@string/add_friend_sentence"
                android:layout_marginLeft="10dp"></TextView>

            <ImageButton
                android:id="@+id/ib_li_accept_friend"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tick_blue"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="70dp"
                android:layout_alignParentRight="true"
                android:focusableInTouchMode="false"
                android:scaleType="fitCenter"
                android:background="#CAD2C5"
                android:adjustViewBounds="true"/>

            <ImageButton
                android:id="@+id/ib_li_decline_friend"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/eliminate_blue"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:focusableInTouchMode="false"
                android:scaleType="fitCenter"
                android:background="#CAD2C5"
                android:adjustViewBounds="true"/>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>